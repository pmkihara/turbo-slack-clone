<%= render 'devise/shared/template', title: 'Forgot your password?' do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: :email,
                      class: 'w-full mb-4 rounded border-gray-300' %>
    <%= f.submit "Send me reset password instructions", class: 'w-full bg-slack-medium text-white rounded p-2 cursor-pointer' %>
  <% end %>
<% end %>
