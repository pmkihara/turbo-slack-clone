<%= render 'devise/shared/template', title: 'Sign in' do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-96' }) do |f| %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: :email,
                      class: 'w-full mb-4 rounded border-gray-300' %>
    <%= f.password_field :password,
                          autocomplete: "current-password",
                          placeholder: :password,
                          class: 'w-full mb-4 rounded border-gray-300' %>

    <%# if devise_mapping.rememberable? %>
    <% if false %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Continue", class: 'w-full bg-slack-medium text-white rounded p-2 cursor-pointer' %>
  <% end %>
<% end %>
