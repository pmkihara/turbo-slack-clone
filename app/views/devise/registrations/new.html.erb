<%= render 'devise/shared/template', title: 'First, enter your email' do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      placeholder: :email,
                      class: 'w-full mb-4 rounded border-gray-300' %>
    <%= f.password_field :password,
                          autocomplete: "new-password",
                          placeholder: :password,
                          class: 'w-full mb-4 rounded border-gray-300' %>
    <%= f.password_field :password_confirmation,
                          autocomplete: "new-password",
                          placeholder: :password_confirmation,
                          class: 'w-full mb-4 rounded border-gray-300' %>
    <%= f.submit "Continue", class: 'w-full bg-slack-medium text-white rounded p-2 cursor-pointer' %>
  <% end %>
<% end %>
