<div class="flex gap-2 font-bold px-4 shadow-line-left shadow-gray-200 w-full h-12 shrink-0 items-center justify-center">
  <span class="grow"><%= render channel %></span>
</div>
<div class="grow shrink shadow-line-left shadow-gray-200 w-full overflow-y-auto">
  <% channel.posts.includes(:user).each do |post| %>
  <%# TODO move to a partial 'message' when the model is implemented %>
    <div class="flex w-full px-4 py-2 hover:bg-gray-100">
      <%= render 'components/atoms/user_avatar', avatar_size: 'h-10 w-10' %>
      <%= render 'components/molecules/message_text', username: post.user.display_name, timestamp: post.created_at, content: "Post" %>
    </div>
  <% end %>
</div>
