<%= form_with model: [channel, post], data: { turbo_frame: :posts } do |form| %>
  <%= form.rich_text_area :rich_content, placeholder: 'Start a new message' %>
  <div class="flex justify-end">
    <%= form.button do %>
      <i class="fas fa-paper-plane opacity-50 p-2"></i>
    <% end %>
  </div>
<% end %>
